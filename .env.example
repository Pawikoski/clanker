# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TARGET_GROUP_ID="-123454354"  # You'll need to set this to your group ID
ALLOWED_ADMIN_IDS=987654231  # Add admin user IDs who can control the bot - comma-separated
MAX_CONTEXT_MESSAGES=20  # Number of recent messages to include in context
TOPIC_TIMEOUT_MINUTES=30  # Minutes of inactivity before starting a new topic
ANSWER_ON_MENTIONS_ONLY=true  # Set to 'true' to answer only when mentioned

# AI Provider Configuration
AI_PROVIDER=grok  # Options: 'grok' or 'gpt'

# API Keys (choose based on AI_PROVIDER)
XAI_API_KEY=your_xai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

